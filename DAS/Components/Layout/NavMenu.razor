@code {

    private string profileType = "Non-User";
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {  
        if (firstRender)
        {
            var profile = await UserService.GetLoggedInUser();
            if(profile != null)
            {
                profileType = profile.Type;
                StateHasChanged();
            }
        }
    }
}